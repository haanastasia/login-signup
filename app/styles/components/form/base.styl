.form

    &__line
        flex(row, wrap, space-between, stretch, stretch)

        &--bottom 
            position absolute
            align-items center
            align-content center
            width 100%
            left 0px
            bottom 0px
            padding 39px 22px 33px 21px

    &__col 
        max-width 234.5px
        width 100%

    &__label
        font-weight 300
        font-size 12px
        line-height 14px
        color #7C7C7C

    &__control 
        width 100%
        border 0px
        border-bottom 0.7px solid #F2F2F2
        padding 4.6px 0px 6.3px
        background none
        outline none
        font-size 14px
        line-height 16px
        color #111111

    &__select
        width 100%
        border 0px
        border-bottom 0.7px solid #F2F2F2
        padding 4.6px 0px 6.3px
        appearance none
        font-size 14px
        line-height 16px
        color #111111
        background none
        
        option 
            font-size 12px

    &__field
        margin 0px 0px 16.38px