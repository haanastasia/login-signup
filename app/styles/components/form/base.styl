.form
    position relative

    &__line
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content space-between
        align-items stretch
        align-content stretch

    &__col 
        max-width 234.5px
        width 100%

    &__label
        font-weight 300
        font-size 12px
        line-height 14px

    &__control 
        width 100%
        border 0px
        border-bottom 0.7px solid #F2F2F2
        padding 4.6px 0px 6.3px
        background none
        outline none
        font-size 14px
        line-height 16px
        color #111111

    &__field
        margin 0px 0px 16.38px